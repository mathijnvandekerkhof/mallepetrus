<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with custom pattern -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %highlight(%-5level) %cyan([%thread]) %yellow(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for production -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/app/logs/jiptv.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/app/logs/jiptv.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Suppress noisy Spring Data Redis warnings -->
    <logger name="org.springframework.data.redis.repository.support.RedisRepositoryFactoryBean" level="ERROR"/>
    <logger name="org.springframework.data.redis.repository.config.RedisRepositoryConfigurationExtension" level="ERROR"/>
    
    <!-- Suppress Hibernate dialect warning -->
    <logger name="org.hibernate.dialect.Dialect" level="ERROR"/>
    
    <!-- Suppress JPA open-in-view warning -->
    <logger name="org.springframework.orm.jpa.JpaTransactionManager" level="WARN"/>
    
    <!-- Suppress Flyway info messages -->
    <logger name="org.flywaydb.core.internal.command.DbValidate" level="WARN"/>
    <logger name="org.flywaydb.core.internal.schemahistory.JdbcTableSchemaHistory" level="WARN"/>
    
    <!-- Suppress HikariCP verbose logging -->
    <logger name="com.zaxxer.hikari.HikariConfig" level="WARN"/>
    <logger name="com.zaxxer.hikari.HikariDataSource" level="WARN"/>
    
    <!-- Suppress Tomcat startup noise -->
    <logger name="org.apache.catalina.startup.DigesterFactory" level="ERROR"/>
    <logger name="org.apache.catalina.util.LifecycleBase" level="ERROR"/>
    <logger name="org.apache.coyote.http11.Http11NioProtocol" level="WARN"/>
    <logger name="org.apache.catalina.core.StandardService" level="WARN"/>
    <logger name="org.apache.catalina.core.StandardEngine" level="WARN"/>
    
    <!-- Suppress Spring Security verbose logging -->
    <logger name="org.springframework.security.web.FilterChainProxy" level="WARN"/>
    <logger name="org.springframework.security.web.access.intercept.FilterSecurityInterceptor" level="WARN"/>
    
    <!-- Keep our application logs at INFO level -->
    <logger name="nl.mallepetrus.jiptv" level="INFO"/>
    
    <!-- Production profile specific configuration -->
    <springProfile name="prod,production">
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
        
        <!-- Show important startup information -->
        <logger name="nl.mallepetrus.jiptv.JiptvApplication" level="INFO"/>
        <logger name="org.springframework.boot.web.embedded.tomcat.TomcatWebServer" level="INFO"/>
        <logger name="org.flywaydb.core.Flyway" level="INFO"/>
    </springProfile>
    
    <!-- Development profile -->
    <springProfile name="dev,development">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    
    <!-- Default configuration -->
    <springProfile name="!prod & !production & !dev & !development">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
</configuration>